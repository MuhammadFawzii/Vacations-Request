@model EmployeeDto
@{
    ViewData["Title"] = "Update Employee";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Update Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <div class="row" style="max-height: 500px; overflow-y: auto;">
                <div class="border-3 col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="form-floating py-2 col-6">
                            <input asp-for="Name" class="form-control border-0 shadow"/>
                            <label asp-for="Name" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-6">
                            <input asp-for="Title" class="form-control border-0 shadow"/>
                            <label asp-for="Title" class="ms-2"></label>
                        </div>
                        
                    </div>
                    <div class="row">
                        <div class="form-floating py-2 col-6">
                            <input asp-for="Email" class="form-control border-0 shadow"/>
                            <label asp-for="Email" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-6">
                            <select asp-for="DepartmentId" asp-items="@(ViewBag.Departments)" class="form-control border-0 shadow">
                                <option disabled selected>Select Department</option>
                            </select>
                            <label asp-for="DepartmentId" class="ms-2"></label>
                            <span asp-validation-for="DepartmentId" class="text-danger"></span>
                        </div>
                    </div>

             
                    
                  
                </div>
            </div>

            <div class="row pt-2">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Update Employee</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-action="Index" class="btn btn-outline-primary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}