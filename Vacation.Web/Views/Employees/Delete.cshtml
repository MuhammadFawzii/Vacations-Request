@model EmployeeDto
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <div class="row" style="max-height: 500px; overflow-y: auto;">
                <div class="border-3 col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="form-floating py-2 col-6">
                            <input asp-for="Name" class="form-control border-0 shadow" readonly />
                            <label asp-for="Name" class="ms-2"></label>
                        </div>

                        <div class="form-floating py-2 col-6">
                            <input asp-for="Title" class="form-control border-0 shadow" readonly />
                            <label asp-for="Title" class="ms-2"></label>
                        </div>

                    </div>


                    <div class="row">
                        <div class="form-floating py-2 col-6">
                            <input asp-for="DepartmentName" class="form-control border-0 shadow" readonly />
                            <label asp-for="DepartmentName" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-6">
                            <input asp-for="Email" class="form-control border-0 shadow" readonly />
                            <label asp-for="Email" class="ms-2"></label>
                        </div>




                    </div>

                </div>
               </div>

            <div class="row g-3 justify-content-center pt-4 ">
                <div class="col-md-4">
                    <button type="submit" class="btn btn-danger btn-lg w-100 shadow-sm ">
                        <i class="fas fa-trash-alt me-2"></i>
                        Delete Request
                    </button>
                </div>
                <div class="col-md-4">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg w-100 shadow-sm">
                        <i class="fas fa-arrow-left me-2"></i>
                        Back to List
                    </a>
                </div>
            </div>
        </form>

    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}